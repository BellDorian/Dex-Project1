{
	"name": "PG_GatherData",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Orders_Raw",
						"type": "DatasetReference"
					},
					"name": "RawOrders"
				},
				{
					"dataset": {
						"referenceName": "OrderDetails_Raw",
						"type": "DatasetReference"
					},
					"name": "RawOrderDetails"
				},
				{
					"dataset": {
						"referenceName": "PaymentStatus",
						"type": "DatasetReference"
					},
					"name": "PaymentStatusTable"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "OrderDetails",
						"type": "DatasetReference"
					},
					"name": "ToOrderDetails"
				},
				{
					"dataset": {
						"referenceName": "Orders",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "MakePriceDecimal",
					"description": "Convert Price to Decimal(10,2)"
				},
				{
					"name": "AggregateOrderPrices"
				},
				{
					"name": "join1"
				},
				{
					"name": "join2"
				},
				{
					"name": "select1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          orderid as integer,",
				"          customerid as integer,",
				"          orderdate as timestamp,",
				"          paymentstatus as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> RawOrders",
				"source(output(",
				"          orderdetailid as integer,",
				"          orderid as integer,",
				"          productid as integer,",
				"          quantity as integer,",
				"          price as decimal(10,2)",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> RawOrderDetails",
				"source(output(",
				"          StatusCode as integer,",
				"          StatusMessage as string",
				"     ),",
				"     allowSchemaDrift: false,",
				"     validateSchema: true,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> PaymentStatusTable",
				"RawOrderDetails cast(output(",
				"          price as decimal(10,0)",
				"     ),",
				"     errors: true) ~> MakePriceDecimal",
				"MakePriceDecimal aggregate(groupBy(orderid),",
				"     price = sum(price)) ~> AggregateOrderPrices",
				"AggregateOrderPrices, RawOrders join(AggregateOrderPrices@orderid == RawOrders@orderid,",
				"     joinType:'outer',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join1",
				"join1, PaymentStatusTable join(paymentstatus == StatusMessage,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join2",
				"join2 select(mapColumn(",
				"          TotalPrice = price,",
				"          OrderID = RawOrders@orderid,",
				"          customerid,",
				"          orderdate,",
				"          StatusCode,",
				"          StatusMessage",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"MakePriceDecimal sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          ComponentID as integer,",
				"          OrderID as integer,",
				"          ProductID as integer,",
				"          Quantity as integer,",
				"          ComponentPrice as decimal(10,2)",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'allErrors',",
				"     transactionCommit: 'single',",
				"     reportSuccessOnError: false,",
				"     mapColumn(",
				"          OrderID = orderid,",
				"          ProductID = productid,",
				"          Quantity = quantity,",
				"          ComponentPrice = price",
				"     )) ~> ToOrderDetails",
				"select1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          OrderID as integer,",
				"          CustomerID as integer,",
				"          StatusCode as integer,",
				"          DateOrdered as timestamp,",
				"          TotalPrice as decimal(10,2)",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          OrderID,",
				"          CustomerID = customerid,",
				"          StatusCode,",
				"          DateOrdered = orderdate,",
				"          TotalPrice",
				"     )) ~> sink1"
			]
		}
	}
}