{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "CustomerInfo",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "window2"
				},
				{
					"name": "SplitEmails"
				},
				{
					"name": "derivedColumn1"
				},
				{
					"name": "SplitName",
					"description": "Splitting First, Last Name"
				},
				{
					"name": "TableCustomers"
				},
				{
					"name": "CleanPhones"
				}
			],
			"scriptLines": [
				"source(output(",
				"          CustomerID as string,",
				"          Name as string,",
				"          Email as string,",
				"          Phone as string,",
				"          LastPurchaseDate as string,",
				"          TotalSpent as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source1 window(over(CustomerID),",
				"     asc(LastPurchaseDate, true),",
				"     RowNumber = rowNumber(),",
				"     partitionBy('hash', 1)) ~> window2",
				"window2 split(RowNumber > 1,",
				"     disjoint: false) ~> SplitEmails@(ExtraEmail, PrimaryEmail)",
				"SplitEmails@ExtraEmail derive(Email = ERROR_FUNCTION('')) ~> derivedColumn1",
				"SplitEmails@PrimaryEmail derive(FirstName = split(Name,' ')[1],",
				"          Surname = split(Name,' ')[2]) ~> SplitName",
				"SplitName select(mapColumn(",
				"          CustomerID,",
				"          FirstName,",
				"          Surname,",
				"          Email,",
				"          Phone",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> TableCustomers",
				"TableCustomers derive(PhoneNumberIsValid = regexMatch(Phone, '[0-9]{3}-[0-9]{3}-[0-9]{4}')) ~> CleanPhones"
			]
		}
	}
}